<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">
    
    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:textOn="Decrypt"
        android:textOff="Encrypt"
        android:id="@+id/toggleButton" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/textbox_padding"
        android:layout_marginBottom="@dimen/textbox_padding"
        android:paddingTop="@dimen/textbox_padding"
        android:paddingBottom="@dimen/textbox_padding"
        android:layout_weight="1"
        android:id="@+id/caesarPlainText"
        android:hint="  enter your plaintext here"
        android:gravity="start"
        android:background="#E0E0E0" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="shift #"
            android:gravity="center"
            android:id="@+id/shiftNum"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/textbox_padding"
            android:layout_marginRight="@dimen/textbox_padding" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="A -> B"
            android:layout_weight="1"
            android:id="@+id/shiftIndicator"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encrypt"
            android:layout_weight="1"/>
        
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/textbox_padding"
        android:layout_marginBottom="@dimen/textbox_padding"
        android:paddingTop="@dimen/textbox_padding"
        android:paddingBottom="@dimen/textbox_padding"
        android:layout_weight="1"
        android:background="#E0E0E0"
        android:text="  cipher text will be displayed here"
        android:id="@+id/caesarCipherText"
        android:textAppearance="?android:attr/textAppearanceMedium" />


</LinearLayout>
