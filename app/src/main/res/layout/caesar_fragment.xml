<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textOff="All Characters"
            android:textOn="Alphabet Only"
            android:id="@+id/characterToggle" />

        <ToggleButton
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textOff="Match Case"
            android:textOn="Remove Case"
            android:id="@+id/caseToggle" />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/textbox_padding"
        android:layout_marginBottom="@dimen/textbox_padding"
        android:paddingTop="@dimen/textbox_padding"
        android:paddingBottom="@dimen/textbox_padding"
        android:layout_weight="1"
        android:id="@+id/caesarPlainText"
        android:hint="  enter your plaintext here"
        android:gravity="start"
        android:background="#E0E0E0" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="shift #"
            android:gravity="center"
            android:id="@+id/shiftNum"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/textbox_padding"
            android:layout_marginRight="@dimen/textbox_padding" />
        
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textAlignment="center"
            android:text="    A -> B"
            android:layout_weight="1"
            android:id="@+id/shiftIndicator"
            />

        <Button
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text="Encrypt"
            android:onClick="computeCaesarShift"
            android:layout_weight="1"/>
        
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/textbox_padding"
        android:layout_marginBottom="@dimen/textbox_padding"
        android:paddingTop="@dimen/textbox_padding"
        android:paddingBottom="@dimen/textbox_padding"
        android:selectAllOnFocus="true"
        android:textIsSelectable="true"
        android:layout_weight="1"
        android:background="#E0E0E0"
        android:text="  cipher text will be displayed here"
        android:id="@+id/caesarCipherText"
        android:textAppearance="?android:attr/textAppearanceMedium" />


</LinearLayout>
